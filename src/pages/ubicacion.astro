---
import Layout from '../components/Layout.astro'
import Navegacion from '../components/Navegacion.astro'
import WhatsAppBtn from '../components/WhatsAppBoton.astro'
---
<Layout pageTitle="Ubicación">
	<main class="contenedor grid auto-cols-max grid-cols-12 mt-24 m-auto">
		<section class="col_left-servicios col-span-12 md:col-span-6 p-12">
			<div class="grid grid-cols-12 gap-6">
				<div class="rounded bg-blue-400 col-span-12">
					<iframe style="width:100%; height:350px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1288.3459896851798!2d-104.66060217754777!3d24.031321055723446!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x869bc82744f883b9%3A0x14dcd14682abdc7c!2sPriv.%20Paloma%20I%2C%20Zona%20Centro%2C%2034000%20Durango%2C%20Dgo.!5e0!3m2!1ses-419!2smx!4v1687277145568!5m2!1ses-419!2smx" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
				<div class="col-span-12 md:col-span-6">
					<h3 class="text-center text-2xl md:text-left">Teléfono</h3>
					<a class="flex justify-center md:justify-start mt-6 gap-4" href="tel:6182036816">
						<img class="w-9 " src="/odontopediatra-doctora-andrea-flores/iconos/phone.svg">
						(618)2036816
					</a>
				</div>
				<div class="col-span-12 md:col-span-6">
					<h3 class="text-center text-2xl md:text-left">Síguenos en redes sociales</h3>
					<div class="icons flex justify-center md:justify-start gap-6 mt-6">
						<a href="https://www.facebook.com/DraAndreaFloresOdontopediatria" target="_blank">
							<img class="w-10" src="/odontopediatra-doctora-andrea-flores/iconos/facebook-icon.svg" alt="">
						</a>
						<a href="https://www.instagram.com/dra.andreaflorees/" target="_blank">
							<img class="w-10" src="/odontopediatra-doctora-andrea-flores/iconos/instagram-icon.svg" alt="">
						</a>
					</div>
				</div>
			</div>
		</section>
		<aside class="col_right col-span-12 md:col-span-6 p-12 flex flex-col items-center justify-center bg-white">
			<header>
				<img class="w-48" src="/odontopediatra-doctora-andrea-flores/odontopediatra-andrea-flores-logotipo.png" alt="">
			</header>
			<Navegacion/>
		</aside>
	</main>
</Layout>